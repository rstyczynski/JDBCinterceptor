<?xml version = '1.0' encoding = 'UTF-8'?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <servlet>
        <servlet-name>CurrentSQL</servlet-name>
        <servlet-class>styczynski.weblogic.jdbc.debug.show.CurrentSQL</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LatestAlerts</servlet-name>
        <servlet-class>styczynski.weblogic.jdbc.debug.show.LatestAlerts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LatestHistograms</servlet-name>
        <servlet-class>styczynski.weblogic.jdbc.debug.show.LatestHistograms</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ExecuteSQL</servlet-name>
        <servlet-class>styczynski.weblogic.jdbc.debug.test.ExecuteSQL</servlet-class>
    </servlet>
        <servlet>
        <servlet-name>SetParameters</servlet-name>
        <servlet-class>styczynski.weblogic.jdbc.debug.config.SetParameters</servlet-class>
    </servlet>
    
    
    <servlet-mapping>
        <servlet-name>CurrentSQL</servlet-name>
        <url-pattern>/currentSQL</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LatestAlerts</servlet-name>
        <url-pattern>/latestAlerts</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LatestHistograms</servlet-name>
        <url-pattern>/latestHistograms</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ExecuteSQL</servlet-name>
        <url-pattern>/executesql</url-pattern>
    </servlet-mapping>
    
    
    <servlet-mapping>
        <servlet-name>SetParameters</servlet-name>
        <url-pattern>/setparameters</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>latestAlerts</welcome-file>
    </welcome-file-list>
    
        <security-constraint>
        <web-resource-collection>
            <web-resource-name>JDBCmonitorCtrl</web-resource-name>
            <url-pattern>/setparameters</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Monitor</role-name>
            <role-name>Admin</role-name>
            <role-name>Operator</role-name>
            <role-name>TestApp</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>JDBCmonitorCtrl</web-resource-name>
            <url-pattern>/executesql</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Admin</role-name>
            <role-name>TestApp</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>JDBCmonitorCtrl</web-resource-name>
            <url-pattern>/currentSQL</url-pattern>
            <url-pattern>/latestAlerts</url-pattern>
            <url-pattern>/latestHistograms</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Admin</role-name>
            <role-name>Operator</role-name>
            <role-name>TestApp</role-name>
            <role-name>Monitor</role-name>
        </auth-constraint>
    </security-constraint>
    
    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
    
    <security-role>
        <role-name>Admin</role-name>
    </security-role>
    <security-role>
        <role-name>Operator</role-name>
    </security-role>
    <security-role>
        <role-name>AppTest</role-name>
    </security-role>
    <security-role>
        <role-name>Monitor</role-name>
    </security-role>
    
    
    
</web-app>
